<script type="text/javascript">
function idCheck(id){
   if(id == ""){   //아이디를 입력하지 않은 경우
      alert("아이디를 입력해주세요.");
   }else{   //아이디 값이 넘어온 경우
      url = "idCheck.jsp?mem_id="+id;   //페이지 이동 시 get 방식으로 데이터를 넘긴다.
      window.open(url, "get","width=350, height=150");
   }
}
</script>


